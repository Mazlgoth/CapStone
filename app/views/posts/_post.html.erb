<div class="row">
	<div class="col s4">
	  <h2 class="header"><%= post.title %></h2>
	  <div class="card">
	    <div class="card-image">
	      <%= image_tag post.thumb_image %>
	    </div>
	    <div class="card-stacked">
	      <div class="card-content">
					<p><%= post.body %></p>
					<p> Posted <%= distance_of_time_in_words(post.created_at, Time.now) %> ago.</p>
	      </div>
	      <div class="card-action">
	        <%= link_to 'Show', post %>
					<%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin) %>
					<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
	      </div>
	    </div>
	  </div>
	</div>
</div>