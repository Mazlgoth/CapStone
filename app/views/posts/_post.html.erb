

  <div class="feature-table row mt-10 pos-absolute-md">
    <% @posts.each do |post| %>
      <div class="cell-md-4">
        <div class="card">
          <div class="card-header">
            <%= post.title %>         
          </div>
          <div class="card-content p-2">
          	<%= image_tag 'cosplay.jpg', :class => 'thumb_image' %>
          	
            <p class="fg-gray">Posted <%= distance_of_time_in_words(post.created_at, Time.now) %> ago.</p>
            <%= post.body %>
          </div>
          <div class="card-footer">
          	<button class="button primary"><%= link_to 'Show', post %></button>
            <button class="button secondary"><%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin) %></button>
            <button class="button secondary"><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>



