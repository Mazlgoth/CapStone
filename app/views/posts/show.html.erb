<div class="head-space"></div>
<p id="notice"><%= notice %></p>

<body class="bg-gray">
	<div class="container">
		<div class="grid">
			<div class=" card-header row bg-grayBlue border bd-dark border-radius" style="margin: 50px;">
				<h1><%= @post.title %></h1>
			</div>

			<div class="row">
				<div class="cell">
					<div class="img-container">
						<%= image_tag @post.image.url, :class => 'image rounded' %>
					</div>
				</div>
			</div>

			<div class="row bg-grayBlue border bd-dark border-radius" style="margin: 20px;">
				<div class="cell" style="padding: 20px;">
					<%= @post.body %>
				</div>
			</div>
		</div>
	</div>
</body>

