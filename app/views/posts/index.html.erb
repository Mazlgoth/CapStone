<p id="notice"><%= notice %></p>

<h1>Posts</h1>

  <%= link_to ' Create New Post', new_post_path %>

    <% @posts.each do |post| %>      
        <p><%= image_tag post.thumb_image %></p>
        <p><%= post.title %></p>
        <p><%= post.body %></p>
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

